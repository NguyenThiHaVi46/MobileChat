<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/all_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/left_chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <include layout="@layout/profile_pic_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/chat_color_sender"
                android:padding="8dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/left_chat_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello how are you?"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/right_chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/chat_color_receiver"
            android:padding="8dp"
            android:layout_marginStart="80dp"
            android:layout_gravity="end"
            android:background="@drawable/edit_text_rounded_corner">
            <TextView
                android:id="@+id/right_chat_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am fine."
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/all_chat_layout">

        <LinearLayout
            android:id="@+id/left_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_pic_image_view_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circular_bg"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:backgroundTint="@color/off_white"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                />
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp">
                <ImageView
                    android:id="@+id/left_chat_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/test_image"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/right_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/right_chat_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/test_image"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/all_image_layout">

        <LinearLayout
            android:id="@+id/left_video_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_pic_image_view_video"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circular_bg"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:backgroundTint="@color/off_white"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp">

                <FrameLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp">

                    <VideoView
                        android:id="@+id/left_chat_video"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:visibility="gone"/>


                    <RelativeLayout
                        android:id="@+id/left_chat_video_thumbnail_Rela"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <ImageView
                            android:id="@+id/left_chat_video_thumbnail"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/test_image"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:tint="@color/my_primary"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_play_circle"/>
                    </RelativeLayout>
                </FrameLayout>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_video_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp">

                <VideoView
                    android:id="@+id/right_chat_video"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/right_chat_video_thumbnail_Rela"
                    android:layout_width="130dp"
                    android:layout_height="130dp">
                    <ImageView
                        android:id="@+id/right_chat_video_thumbnail"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_image"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/my_primary"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_play_circle"/>
                </RelativeLayout>


            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_file_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/all_video_layout">

        <LinearLayout
            android:id="@+id/left_file_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_pic_image_view_file"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circular_bg"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:backgroundTint="@color/off_white"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/chat_color_sender"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginEnd="80dp"
                android:background="@drawable/edit_text_rounded_corner">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_file_present"
                    android:background="@drawable/circular_bg"
                    android:padding="2dp"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:id="@+id/left_chat_fileView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello how are you?"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_file_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/chat_color_receiver"
            android:padding="8dp"
            android:layout_marginStart="80dp"
            android:layout_gravity="end"
            android:background="@drawable/edit_text_rounded_corner">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_file_present"
                android:background="@drawable/circular_bg"
                android:padding="2dp"
                android:backgroundTint="@color/ic_launcher_background"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/right_chat_fileView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am fine."
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>