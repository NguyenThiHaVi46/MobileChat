<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_secondary"
        android:padding="10dp">

        <TextView
            android:id="@+id/other_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/profile_pic_layout"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <include layout="@layout/profile_pic_view"
            android:id="@+id/profile_pic_layout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/back_btn"
            android:layout_marginStart="10dp"
            />
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/chat_group_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/icon_group_add"
            android:visibility="visible"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/chat_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_menu"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            app:tint="@color/white"
            android:visibility="gone"/>

    </RelativeLayout>

    <!-- Bọc RecyclerView và menu trượt bên trong DrawerLayout -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/toolbar">

        <!-- Nội dung chính của Activity -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="3dp"
            tools:ignore="DuplicateIds"
            />

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Members"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/members_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="@color/my_secondary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/show_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_addbox"
                android:layout_centerInParent="true"
                app:tint="@color/black"
                android:backgroundTint="@color/my_secondary"
                />
            <LinearLayout
                android:id="@+id/hidden_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_below="@id/show_image"
                android:layout_centerHorizontal="true"
                >

                <ImageButton
                    android:id="@+id/button_camera"
                    android:layout_width="25dp"
                    android:backgroundTint="@color/my_secondary"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_camera"
                    app:tint="@color/black"
                    />

                <ImageButton
                    android:id="@+id/button_file"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/my_secondary"
                    android:src="@drawable/icon_file"
                    app:tint="@color/black"/>
            </LinearLayout>
            <EditText

                android:id="@+id/chat_message_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write message here"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:padding="10dp"
                android:elevation="4dp"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/message_send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_send"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/black"
            android:padding="8dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</RelativeLayout>
